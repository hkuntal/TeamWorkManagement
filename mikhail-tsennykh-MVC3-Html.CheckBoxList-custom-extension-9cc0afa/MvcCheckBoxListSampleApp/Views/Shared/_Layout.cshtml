@using MvcCheckBoxList.Library
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
  <title>.CheckBoxList() | @ViewBag.Title</title>
  
  @* Let's help search engines a bit *@
  <meta name="robots" content="NOODP" />
  <meta name="description" content="HtmlHelper custom extension, which creates a postable Model-based list of check boxes for Microsoft MVC Framework." />
  <meta name="keywords" content="MvcCheckBoxList,CheckBoxList,CheckBoxListFor,POST,Postable,Check Box,Checkbox,List,Lists,MVC,MVC3,Microsoft,Framework,Web Development,Extension,Package,NuGet,Install,Download,Source,Code,Source Code,Visual Studio,CodeProject,Mikhail Tsennykh" />
  <meta property="og:title" content="Html.CheckBoxList()" />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="en_EN" />
  <meta property="og:site_name" content="MVC Html.CheckBoxList() extension" />
  <meta property="og:description" content="HtmlHelper custom extension, which creates a postable Model-based list of check boxes for Microsoft MVC Framework." />

  @* HTML-Kickstart CSS *@
	<link href="@Url.Content("~/Content/kickstart/kickstart.css")" rel="stylesheet" type="text/css" />
  
  @* CSS *@
	<link href="@Url.Content("~/Content/style.lib.css")" rel="stylesheet" type="text/css" />
  <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
  <link href="@Url.Content("~/Content/style.local.css")" rel="stylesheet" type="text/css" />
  <link href="@Url.Content("~/Content/style.examples.css")" rel="stylesheet" type="text/css" />

</head>
<body>
	<div class="header clearfix">
    @*<div class="top_menu"><a href="/">Home</a></div>*@
    
    <div class="col_12">
		  <h1 class="content_left">
        @Html.ActionLink("MVC Html.CheckBoxList() extension", "Index", "Home")
      </h1>
      <h1 class="content_right">
        <note>v.@MvcCheckBoxList.AssemblyInfo.Version</note>
      </h1>
    </div>
    
    @if (ViewBag.HideMenu != true) {
      <div class="col_12">
        <ul class="nav">
          <li><a href="/"><span class="icon large gray" data-icon="I"></span></a></li>
          <li>@Html.ActionLink("Examples", "Examples", "Home")</li>
          <li>@Html.ActionLink("Documentation", "Docs", "Home")</li>
          <li><a title="... on CodeProject.com" href="@ViewBag.CodePrejectUrl">Discussion *</a></li>
        </ul>
      </div>
    }
	</div>
	
	<div class="content">
		@RenderBody()
    <div class="clear"></div>
	</div>
	
	<div class="footer">
    © 2012 <a target="_blank" href="@ViewBag.AuthorUrl">Mikhail Tsennykh</a>. All Rights Reserved.
    | Released under <a href="@ViewBag.LicenseUrl">CPOL License</a>
    | Built with <a href="http://www.99lime.com">HTML KickStart</a>
    and <a href="http://subtlepatterns.com">SubtlePatterns.com</a>
	</div>
  
  @* Scripts (at bottom to speed up page load) *@
	<script src="http://code.jquery.com/jquery.min.js"></script>
  <script>    window.jQuery || document.write('<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")"><\/script>')</script>
  <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
  
  @* HTML-Kickstart Scripts *@
	<script src="@Url.Content("~/Scripts/kickstart.js")"></script>
	<script src="@Url.Content("~/Scripts/prettify.js")"></script>
  
  @* Scripts on views have to sit inside to work *@
  @RenderSection("Scripts", false)

</body>
</html>